<?xml version="1.0"?>
<ruleset name="PS Chat">
    <description>Code Standard for PS Chat Plugin</description>

    <!-- Set a baseline enforcing PSR-2 with WordPress tweaks -->
    <config name="installed_paths" value="../../wp-coding-standards/wpcs" />
    
    <!-- Include WordPress standards -->
    <rule ref="WordPress">
        <!-- Exclude problematic rules for legacy code -->
        <exclude name="WordPress.DB.DirectDatabaseQuery.DirectQuery" />
        <exclude name="WordPress.DB.DirectDatabaseQuery.NoCaching" />
        <exclude name="WordPress.CodeAnalysis.EscapedNotEscaped" />
    </rule>

    <!-- Apply PSR-2 for modern code -->
    <rule ref="PSR2">
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore" />
    </rule>

    <!-- Specific rules -->
    <rule ref="WordPress.WP.GlobalVariables">
        <properties>
            <property name="overrideGlobals" value="wpdb,wp_query,wp_rewrite" />
        </properties>
    </rule>

    <!-- Paths to check -->
    <file>./includes/</file>
    <file>./lib/</file>
    
    <!-- Exclude vendor and tests -->
    <exclude-pattern>./vendor/</exclude-pattern>
    <exclude-pattern>./tests/</exclude-pattern>
    <exclude-pattern>./node_modules/</exclude-pattern>
    
    <!-- Arguments -->
    <arg value="sp" />
    <arg name="extensions" value="php" />
    <arg name="tab-width" value="4" />
</ruleset>
